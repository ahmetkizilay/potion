{
  "name": "potion",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "firebase emulators:exec \"ng test\"",
    "test:ci": "firebase emulators:exec \"ng test --configuration=ci\"",
    "serve:ssr:potion": "node dist/potion/server/server.mjs",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "test:firestore-rules": "firebase emulators:exec --only firestore \"jest --forceExit firestore/rules.spec.ts\"",
    "e2e": "firebase emulators:exec \"ng e2e\" --import=\"./e2e/emulator-data/\"",
    "ci:functions": "npm --prefix functions ci",
    "install:functions": "npm --prefix functions install",
    "build:functions": "npm --prefix functions run build",
    "lint:functions": "npm --prefix functions run lint",
    "test:functions": "firebase emulators:exec \"npm --prefix functions test\"",
    "deploy:functions": "firebase deploy --only functions"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.6",
    "@angular/common": "^19.2.6",
    "@angular/compiler": "^19.2.6",
    "@angular/core": "^19.2.6",
    "@angular/fire": "^19.1.0",
    "@angular/forms": "^19.2.6",
    "@angular/platform-browser": "^19.2.6",
    "@angular/platform-browser-dynamic": "^19.2.6",
    "@angular/platform-server": "^19.2.6",
    "@angular/router": "^19.2.6",
    "@angular/ssr": "^19.2.7",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.7",
    "@angular/compiler-cli": "^19.2.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@firebase/rules-unit-testing": "^3.0.3",
    "@puppeteer/ng-schematics": "^0.7.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine": "5.1.0",
    "jasmine-core": "~5.1.0",
    "jest": "^29.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "puppeteer": "^24.6.1",
    "ts-jest": "^29.1.4",
    "typescript": ">=5.5"
  }
}
